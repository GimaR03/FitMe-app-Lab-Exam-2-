<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ADD8E6">

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/notification_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/navigation_bar"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- ðŸ”¹ Notification Title -->
            <TextView
                android:id="@+id/notification_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notification_title"
                android:textSize="24sp"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- ðŸ”¹ Meals Section -->
            <androidx.cardview.widget.CardView
                android:id="@+id/meals_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/meals_title"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    android:padding="16dp" />
            </androidx.cardview.widget.CardView>

            <!-- ðŸ”¹ Lunch Notification -->
            <androidx.cardview.widget.CardView
                android:id="@+id/lunch_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#E0E0E0"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/lunch_text"
                            android:textSize="16sp"
                            android:textColor="#000000" />

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_delete"
                            android:contentDescription="@string/delete_desc" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:paddingTop="8dp">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/snooze_text"
                            android:textSize="12sp"
                            android:textColor="#F8F8F8"
                            android:background="#647FC1"
                            android:padding="4dp" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dismiss_text"
                            android:textSize="12sp"
                            android:textColor="#F8F8F8"
                            android:background="#647FC1"
                            android:padding="4dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ðŸ”¹ Tea Time Notification -->
            <androidx.cardview.widget.CardView
                android:id="@+id/tea_time_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#E0E0E0"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/tea_time_text"
                            android:textSize="16sp"
                            android:textColor="#000000" />

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_delete"
                            android:contentDescription="@string/delete_desc" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:paddingTop="8dp">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/snooze_text"
                            android:textSize="12sp"
                            android:textColor="#F8F8F8"
                            android:background="#647FC1"
                            android:padding="4dp" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dismiss_text"
                            android:textSize="12sp"
                            android:textColor="#F8F8F8"
                            android:background="#647FC1"
                            android:padding="4dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ðŸ”¹ Add Icon for Meals -->
            <ImageView
                android:id="@+id/add_meal_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_add"
                android:contentDescription="@string/add_meal_desc"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- ðŸ”¹ Workouts Section -->
            <androidx.cardview.widget.CardView
                android:id="@+id/workouts_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/workouts_title"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    android:padding="16dp" />
            </androidx.cardview.widget.CardView>

            <!-- ðŸ”¹ Yoga Notification -->
            <androidx.cardview.widget.CardView
                android:id="@+id/yoga_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#E0E0E0"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/yoga_text"
                            android:textSize="16sp"
                            android:textColor="#000000" />

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_delete"
                            android:contentDescription="@string/delete_desc" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:paddingTop="8dp">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/snooze_text"
                            android:textSize="12sp"
                            android:textColor="#F8F8F8"
                            android:background="#647FC1"
                            android:padding="4dp" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dismiss_text"
                            android:textSize="12sp"
                            android:textColor="#F8F8F8"
                            android:background="#647FC1"
                            android:padding="4dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ðŸ”¹ Add Icon for Workouts -->
            <ImageView
                android:id="@+id/add_workout_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_add"
                android:contentDescription="@string/add_workout_desc"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- ðŸ”¹ Timer Section -->
            <androidx.cardview.widget.CardView
                android:id="@+id/timer_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/timer_title"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    android:padding="16dp" />
            </androidx.cardview.widget.CardView>

            <!-- ðŸ”¹ Running Timer -->
            <androidx.cardview.widget.CardView
                android:id="@+id/running_timer_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#E0E0E0"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/running_timer_text"
                            android:textSize="16sp"
                            android:textColor="#000000" />

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_delete"
                            android:contentDescription="@string/delete_desc" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:paddingTop="8dp">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pause_text"
                            android:textSize="12sp"
                            android:textColor="#F8F8F8"
                            android:background="#647FC1"
                            android:padding="4dp" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/resume_text"
                            android:textSize="12sp"
                            android:textColor="#F8F8F8"
                            android:background="#647FC1"
                            android:padding="4dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ðŸ”¹ Add Icon for Timer -->
            <ImageView
                android:id="@+id/add_timer_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_add"
                android:contentDescription="@string/add_timer_desc"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp" />

        </LinearLayout>
    </ScrollView>

    <!-- ðŸ”¹ Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#647FC1"
        app:menu="@menu/bottom_navigation_menu"
        app:itemIconTint="@null"
        android:visibility="gone" />
</RelativeLayout>
