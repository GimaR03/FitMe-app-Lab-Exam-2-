<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ADD8E6">

    <!-- Content Area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/navigation_bar"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="@string/find_friends_title"
                android:textColor="#000000"
                android:textSize="28sp" />

            <!-- Image -->
            <ImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_marginBottom="38dp"
                android:contentDescription="@string/find_friends_image_desc"
                android:src="@drawable/find_friends_image" />

            <!-- Middle Sentence -->
            <TextView
                android:layout_width="291dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:text="@string/find_friends_description"
                android:textColor="#000000"
                android:textSize="25sp" />

            <!-- Invite Buttons -->
            <Button
                android:id="@+id/invite_instagram_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:backgroundTint="#647FC1"
                android:text="@string/invite_instagram"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/invite_facebook_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:backgroundTint="#647FC1"
                android:text="@string/invite_facebook"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/invite_whatsapp_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:backgroundTint="#647FC1"
                android:text="@string/invite_whatsapp"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Nav -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#647FC1"
        app:menu="@menu/bottom_navigation_menu"
        app:itemIconTint="@null"
        android:visibility="gone" />

</RelativeLayout>
