<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/gradient_background">

    <!-- Minimized Onboarding Image -->

    <!-- Text with White Background -->

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="Onboarding Screen 1"
        android:scaleType="centerCrop"
        android:src="@drawable/onboarding1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get your dream body with fit me"
        android:textColor="#000000"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:textSize="20sp"
        android:layout_marginBottom="16dp" />

    <!-- Let's Start Button -->
    <Button
        android:id="@+id/lets_start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FFB6C1"
        android:text="Let's start" />

</LinearLayout>