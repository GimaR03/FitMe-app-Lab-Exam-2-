<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Blue Section with ID -->
    <LinearLayout
        android:id="@+id/blue_section"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#1E90FF"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Your Fitness Journey!"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginBottom="32dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/curve_shape" />
</LinearLayout>

    <!-- Curve Divider -->
<View
android:id="@+id/curve_divider"
android:layout_width="1dp"
android:layout_height="1dp"
android:layout_below="@id/blue_section" />

    <!-- White Section -->
<LinearLayout
android:id="@+id/content_layout"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_below="@id/curve_divider"
android:layout_above="@+id/navigation_bar"
android:background="#FFFFFF"
android:orientation="vertical"
android:gravity="center"
android:padding="16dp">

<!-- Chart Section -->
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Your Progress Chart"
    android:textColor="#1E90FF"
    android:textSize="18sp"
    android:layout_marginBottom="8dp" />

<ImageView
    android:layout_width="250dp"
    android:layout_height="200dp"
    android:src="@drawable/homepage1"
    android:contentDescription="Progress Chart"
    android:scaleType="centerCrop"
    android:layout_marginBottom="32dp" />

<!-- Profile Section -->
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Profile Description"
    android:textColor="#1E90FF"
    android:textSize="18sp"
    android:layout_marginBottom="8dp" />

<ImageView
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:src="@drawable/homepage2"
    android:contentDescription="Profile Image"
    android:scaleType="centerCrop"
    android:layout_marginBottom="16dp" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Name: Jane Doe\nAge: 28\nGoal: Build Muscle\nJoined: Aug 2025"
    android:textColor="#000000"
    android:textSize="16sp"
    android:gravity="center"
    android:padding="12dp"
    android:background="#E0E0E0" />

</LinearLayout>

    <!-- Navigation Bar -->
<com.google.android.material.bottomnavigation.BottomNavigationView
android:id="@+id/navigation_bar"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_alignParentBottom="true"
android:background="#1E90FF"
app:menu="@menu/bottom_navigation_menu"
app:itemIconTint="@null" />

    </RelativeLayout>